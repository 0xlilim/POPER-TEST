{
  "family": "php-poper-log",
  "containerDefinitions": [
    {
      "name": "php-poper-test",
      "image": "poper:latest",
      "cpu": 0,
      "portMappings": [
        {
          "name": "php-poper-test-80-tcp",
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "dependsOn": [
        {
          "containerName": "appconfig-agent",
          "condition": "HEALTHY"
        }
      ],
      "restartPolicy": {
        "enabled": true
      },
      "essential": true,
      "environment": [],
      "mountPoints": [
        {
          "sourceVolume": "application_logs",
          "containerPath": "/var/log/exported"
        },
        {
          "sourceVolume": "appconfig",
          "containerPath": "/opt/aws/appconfig"
        }
      ],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/php-poper",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "php-fpm"
        },
        "secretOptions": []
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost/health || exit 1"
        ],
        "interval": 15,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "systemControls": []
    },
    {
      "name": "vector-log",
      "image": "476114136251.dkr.ecr.ap-northeast-1.amazonaws.com/timberio/vector:0.44.0-alpine",
      "cpu": 0,
      "command": [
        "--config",
        "/var/log/exported/vector.toml"
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -fs http://localhost:8686 || [ $? -eq 22 ]"
        ],
        "interval": 15,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "restartPolicy": {
        "enabled": true
      },
      "portMappings": [],
      "essential": false,
      "environment": [],
      "environmentFiles": [],
      "mountPoints": [
        {
          "sourceVolume": "application_logs",
          "containerPath": "/var/log/exported"
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "php-poper-test",
          "readOnly": true
        }
      ],
      "dependsOn": [
        {
          "containerName": "php-poper-test",
          "condition": "HEALTHY"
        }
      ],
      "readonlyRootFilesystem": false,
      "systemControls": []
    },
    {
      "name": "appconfig-agent",
      "image": "476114136251.dkr.ecr.ap-northeast-1.amazonaws.com/aws-appconfig/aws-appconfig-agent:latest",
      "cpu": 0,
      "restartPolicy": {
        "enabled": true
      },
      "portMappings": [
      
      ],
      "essential": true,
      "environment": [
        {
          "name": "MANIFEST",
          "value": "{\n  \"POPER-app-phptest:development:app-config-development\": {\n    \"writeTo\": {\n      \"path\": \"/opt/aws/appconfig/php-poper-test/development/config.json\"\n    }\n  },\n  \"POPER-app-phptest:production:app-config-development\": {\n    \"writeTo\": {\n      \"path\": \"/opt/aws/appconfig/php-poper-test/production/config.json\"\n    }\n  }\n}"
      }
      ],
      "environmentFiles": [],
      "mountPoints": [
        {
          "sourceVolume": "appconfig",
          "containerPath": "/opt/aws/appconfig"
        }
      ],
      "readonlyRootFilesystem": false,
      "systemControls": [],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -fs http://localhost:2772 || [ $? -eq 22 ]"
        ],
        "interval": 15,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "taskRoleArn": "arn:aws:iam::476114136251:role/ecsTaskRole",
  "executionRoleArn": "arn:aws:iam::476114136251:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "volumes": [
    {
      "name": "application_logs"
    },
    {
      "name": "appconfig"
    }
  ],
  "placementConstraints": [],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048",
  "enableFaultInjection": false
}