{
  "family": "php-poper-log",
  "containerDefinitions": [
    {
      "name": "php-poper-test",
      "image": "poper:latest",
      "cpu": 0,
      "portMappings": [
        {
          "name": "php-poper-test-80-tcp",
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "restartPolicy": {
        "name": "ALWAYS",
        "maximumAttempts": 3
      },
      "essential": true,
      "environment": [],
      "mountPoints": [
        {
          "sourceVolume": "application_logs",
          "containerPath": "/var/log/exported"
        }
      ],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/php-poper",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "php-fpm"
        },
        "secretOptions": []
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost/up || exit 1"
        ],
        "interval": 15,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "systemControls": []
    },
    {
      "name": "vector-log",
      "image": "476114136251.dkr.ecr.ap-northeast-1.amazonaws.com/timberio/vector:0.44.0-alpine",
      "cpu": 0,
      "command": [
        "--config",
        "/var/log/exported/vector.toml"
      ],
      "restartPolicy": {
        "name": "ALWAYS",
        "maximumAttempts": 3
      },
      "portMappings": [],
      "essential": false,
      "environment": [],
      "environmentFiles": [],
      "mountPoints": [
        {
          "sourceVolume": "application_logs",
          "containerPath": "/var/log/exported"
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "php-poper-test",
          "readOnly": true
        }
      ],
      "dependsOn": [
        {
          "containerName": "php-poper-test",
          "condition": "HEALTHY"
        }
      ],
      "readonlyRootFilesystem": false,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -s -f http://localhost:8686/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "systemControls": []
    }
  ],
  "taskRoleArn": "arn:aws:iam::476114136251:role/ecsTaskRole",
  "executionRoleArn": "arn:aws:iam::476114136251:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "volumes": [
    {
      "name": "application_logs"
    }
  ],
  "placementConstraints": [],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "enableFaultInjection": false
}